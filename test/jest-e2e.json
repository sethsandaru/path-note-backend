{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>/../src/$1",
    "@entities/(.*)": "<rootDir>/../src/entities/$1",
    "@dto/(.*)": "<rootDir>/../src/dto/$1",
    "@interfaces/(.*)": "<rootDir>/../src/interfaces/$1",
    "@configs/(.*)": "<rootDir>/../src/configs/$1"
  }
}
