{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"],
      "@entities/*": ["src/entities/*"],
      "@dto/*": ["src/dto/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@configs/*": ["src/configs/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
